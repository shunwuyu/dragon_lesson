*
    margin 0
    padding 0

.accordion
    width 300px
    article
        cursor pointer
        & + article
            margin-top 5px
    input
        &:nth-child(1):checked ~ article:nth-of-type(1) p,
        &:nth-child(2):checked ~ article:nth-of-type(2) p,
        &:nth-child(3):checked ~ article:nth-of-type(3) p
            max-height 600px
    label
        display block
        height 40px
        padding 0 20px
        background-color #f66
        cursor pointer
        line-height 40px
        font-size 16px
        color: #fff
    p
        overflow hidden
        padding 0 20px
        border 1px solid #f66
        border-top none
        border-bottom-width 0
        max-height 0 
        line-height 30px
        transition all 500ms
