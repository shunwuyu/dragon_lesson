*
    margin 0
    padding 0 

html
    font-size 10px
    background url('./background.jpg') bottom center no-repeat
    background-size cover

body, html
    font-family sans-serif

body
    height 100vh
    display flex
    align-items center
    justify-content center

.keys
    display flex 
    .key
        margin 1rem
        border .4rem solid black
        border-radius .5rem
        font-size 1.5rem
        padding 1rem .5rem
        width 10rem
        text-align center
        color white
        background rgba(0,0,0,0.4)
        text-shadow 0 0 .5rem black
        transition all .07s ease
        div
            font-size 4rem
        .sound
            font-size 1.2rem
            text-transform uppercase
            letter-spacing .1rem
            color #ffc600
        &.playing
            transform scale(1.5)
            border-color #ffc600
            box-shadow 0 0 1rem #ffc600